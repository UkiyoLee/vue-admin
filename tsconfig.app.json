{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "src/**/*", "src/**/*.vue", "src/*", "src/configs/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "$/*": ["./*"]
    },
    "noImplicitAny": false,
    "allowJs": true
  }
}
